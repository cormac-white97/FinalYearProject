<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Month"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="250dp"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="12sp"
            app:compactCalendarTextColor="#000000"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#b3b3b3"
            app:compactCalendarCurrentDayBackgroundColor="#bfbfbf"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Event Details:"
            android:textAlignment="center"
            android:textColor="#084897"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="409dp">

            <TextView
                android:id="@+id/lblNumAttending"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:text="Number Attending:"
                android:textAlignment="center"
                android:textColor="#084897"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblStartDate" />

            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:text="Location:"
                android:textAlignment="center"
                android:textColor="#084897"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblEventType" />

            <TextView
                android:id="@+id/lblEventType"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:layout_marginTop="44dp"
                android:text="Event Type:"
                android:textAlignment="center"
                android:textColor="#084897"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtEventType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:onClick="editTextWasClicked"
                android:textColor="#084897"
                app:layout_constraintStart_toEndOf="@+id/lblEventType"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:onClick="editTextWasClicked"
                android:textColor="#084897"
                app:layout_constraintStart_toEndOf="@+id/lblLocation"
                app:layout_constraintTop_toBottomOf="@+id/txtEventType" />

            <TextView
                android:id="@+id/lblStartDate"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:layout_marginTop="25dp"
                android:text="Start Date:"
                android:focusable="false"
                android:textAlignment="center"
                android:textColor="#084897"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblLocation" />

            <EditText
                android:id="@+id/txtStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:onClick="editTextWasClicked"
                android:textColor="#084897"
                app:layout_constraintStart_toEndOf="@+id/lblStartDate"
                app:layout_constraintTop_toBottomOf="@+id/txtLocation" />

            <EditText
                android:id="@+id/txtNumAttending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="textPersonName"
                android:onClick="editTextWasClicked"
                android:textColor="#084897"
                app:layout_constraintStart_toEndOf="@+id/lblNumAttending"
                app:layout_constraintTop_toBottomOf="@+id/txtStartDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>